#!/bin/sh
export JAVA_OPTS=<%= node["tomcat_latest"]["java_options"] %>
case "$1" in
start)
  <%= node["tomcat_latest"]["tomcat_install_loc"] %>/tomcat7/apache-tomcat-7/bin/startup.sh
;;
stop)
  <%= node["tomcat_latest"]["tomcat_install_loc"] %>/tomcat7/apache-tomcat-7/bin/shutdown.sh
;;
*)
  echo "Syntax: $0 <start|stop>"
esac
